<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        
        <Entry x:Name="ApplicationName" Placeholder="Enter Application Name" PlaceholderColor="Olive"  />
        <Entry x:Name="BaseUrl" Placeholder="Enter BaseUrl" PlaceholderColor="Olive" />
        <Entry x:Name="InstitutionId" Placeholder="Enter Institution Id" PlaceholderColor="Olive" />
        <Entry x:Name="ProductId" Placeholder="Enter Product Id" PlaceholderColor="Olive" />
        <Entry x:Name="SSOKey" Placeholder="Enter SSO key" PlaceholderColor="Olive" />
        <Button
            x:Name="MyButton"
            Text="Submit"
            TextColor="Red"
            BorderColor="Blue"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
